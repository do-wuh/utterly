<div class="u-form">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.input :email, required: true, label: false, placeholder: 'email', class: 'btn' %>
    <%= f.button :submit, 'Send reset password instructions', class: 'u-enter float-right' %>
  <% end %>
</div>